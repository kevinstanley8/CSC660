<Window x:Class="Event_Scheduler.AddEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Event_Scheduler"
        mc:Ignorable="d"
        Title="AddEvent" Height="459.534" Width="440.572">
    <Grid Background="#6fa8dc">
        <Label x:Name="lblBanner" Content="Add Event" HorizontalAlignment="Left" Margin="159,10,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="lblDate" Content="Date:" HorizontalAlignment="Left" Margin="74,69,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" FontWeight="Bold"/>
        <DatePicker Name="dpStartDate" HorizontalAlignment="Left" Margin="177,69,0,0" VerticalAlignment="Top" Height="36" Width="205"/>
        <Label x:Name="lblStartTime" Content="Start Time:" HorizontalAlignment="Left" Margin="74,110,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" FontWeight="Bold"/>
        <ComboBox x:Name="cbStartHour" HorizontalAlignment="Left" Margin="177,114,0,0" VerticalAlignment="Top" Width="65"/>
        <ComboBox x:Name="cbStartMinute" HorizontalAlignment="Left" Margin="247,114,0,0" VerticalAlignment="Top" Width="65" RenderTransformOrigin="1.32,0.523"/>
        <ComboBox x:Name="cbStartAMPM" HorizontalAlignment="Left" Margin="317,114,0,0" VerticalAlignment="Top" Width="65"/>
        <Label x:Name="lblEndTime" Content="End Time:" HorizontalAlignment="Left" Margin="74,149,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" FontWeight="Bold"/>
        <ComboBox x:Name="cbEndHour" HorizontalAlignment="Left" Margin="177,153,0,0" VerticalAlignment="Top" Width="65"/>
        <ComboBox x:Name="cbEndMinute" HorizontalAlignment="Left" Margin="247,153,0,0" VerticalAlignment="Top" Width="65" RenderTransformOrigin="1.32,0.523"/>
        <ComboBox x:Name="cbEndAMPM" HorizontalAlignment="Left" Margin="317,153,0,0" VerticalAlignment="Top" Width="65"/>
        <Label x:Name="lblTitle" Content="Title:" HorizontalAlignment="Left" Margin="74,191,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Height="23" Margin="177,191,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="205"/>
        <Label x:Name="lblNotes" Content="Notes:" HorizontalAlignment="Left" Margin="74,222,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="126" Margin="177,226,0,0" Text="" VerticalAlignment="Top" Width="205" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button x:Name="btnSave" Content="Save Event" HorizontalAlignment="Left" Margin="177,381,0,0" VerticalAlignment="Top" Width="96" Background="#FF72F19E" FontFamily="Arial" FontSize="14" FontWeight="Bold" RenderTransformOrigin="-0.1,9.635" Click="btnSave_Click"/>
    </Grid>
</Window>
